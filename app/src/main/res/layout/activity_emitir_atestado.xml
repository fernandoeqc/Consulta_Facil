<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textViewNameAtestado"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="22dp"
        android:text="Paciente"
        app:layout_constraintBottom_toTopOf="@+id/textInputTypeDescricaoAtestado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputTypeDescricaoAtestado"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|top"
        android:hint="DESCRIÇÃO DO ATESTADO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNameAtestado" />

    <Button
        android:id="@+id/btCadastrarAtestado"
        android:layout_width="153dp"
        android:layout_height="59dp"
        android:layout_marginBottom="109dp"
        android:text="Emitir atestado"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#ED0000"
        android:textColorHint="#FF0404"
        android:textColorLink="#E600FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#AF0909"
        app:strokeColor="#BC0808" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-47dp" />


</androidx.constraintlayout.widget.ConstraintLayout>